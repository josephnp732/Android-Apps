<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ordo.com.example.joseph.ordo.Confirmation">

    <TextView
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="52dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageButton9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/checked"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="3dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton9"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Customer Number: "
        android:layout_width="wrap_content"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView22"
        android:layout_below="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton9"
        android:textSize="16sp" />

    <TextView
        android:text="S.V. Number: "
        android:layout_width="wrap_content"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/textView23"
        android:textSize="16sp"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:text="Locality: "
        android:layout_width="wrap_content"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/textView25"
        android:textSize="16sp"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:text="Distributer Name: "
        android:layout_width="wrap_content"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/textView24"
        android:textSize="16sp"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/textView25" />

    <TextView
        android:text="Cost: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_marginTop="29dp"
        android:id="@+id/textView27"
        android:scrollbarSize="20dp"
        android:textSize="16dp"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/textView24" />

    <TextView
        android:text="2264T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:id="@+id/textView29"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:text="1394130947098731"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView23"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:text="Whitefield, Bangalore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView25"
        android:layout_toEndOf="@+id/textView25"
        android:layout_marginStart="12dp"
        android:textSize="16sp" />

    <TextView
        android:text="Dummy Distributer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:text="Gas price + Distributer fee + Ordo fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Rs. 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:layout_below="@+id/textView34"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@android:color/holo_blue_light" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView35"
        android:layout_alignEnd="@+id/textView29"
        android:onClick="showAlertDialog1"/>

</RelativeLayout>
