<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ordo.com.example.joseph.ordo.Delivery_Type"
    android:scrollbarSize="15dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/car"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="3dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:id="@+id/imageButton11"
        android:background="@android:color/transparent"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageButton10"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/motorbike"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="3dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:id="@+id/imageButton12"
        android:layout_below="@+id/imageButton11"
        android:layout_alignStart="@+id/imageButton11" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startup"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="3dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton10"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageButton11"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Prime Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageButton10"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="Normal Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="Guaranteed delivery within 3 days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="Same day delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:text="Delivery within 7 days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:text="Express Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
