<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ordo.com.example.joseph.ordo.Share">

    <TextView
        android:text="Thank You for installing Ordo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/textView26"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Please Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/textView28"
        android:textSize="36sp"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:adjustViewBounds="true"
        android:maxWidth="90dp"
        android:maxHeight="90dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/google_plus"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton3"
        android:elevation="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:adjustViewBounds="true"
        android:maxWidth="90dp"
        android:maxHeight="85dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/whatsapp"
        android:layout_alignEnd="@+id/textView28"
        android:layout_alignBottom="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:adjustViewBounds="true"
        android:maxWidth="85dp"
        android:maxHeight="85dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/facebook"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView28"
        android:layout_alignStart="@+id/textView28" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:adjustViewBounds="true"
        android:maxWidth="90dp"
        android:maxHeight="90dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/instagram"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />
</RelativeLayout>
